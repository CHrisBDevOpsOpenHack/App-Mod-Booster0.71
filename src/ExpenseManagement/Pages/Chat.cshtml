@page
@model ExpenseManagement.Pages.ChatModel
@{
    ViewData["Title"] = "AI Chat";
}

<h2 class="mb-3">AI Chat</h2>
<p class="text-muted">Ask questions or request actions like "Add an expense for Â£50 for travel tomorrow" or "Approve expense #2".</p>

@if (!Model.ChatAvailable)
{
    <div class="alert alert-info">
        AI Chat is not available yet. Redeploy with <code>-DeployGenAI</code> to enable the chat experience.
    </div>
}

<div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="ConversationJson" value="@Model.ConversationJson" />
            <div class="mb-3">
                <label asp-for="UserMessage" class="form-label">Your message</label>
                <textarea asp-for="UserMessage" class="form-control" rows="3" placeholder="e.g., Show submitted expenses"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" @(Model.ChatAvailable ? "" : "disabled")>Send</button>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="card-title">Conversation</h5>
        @if (Model.Conversation.Any())
        {
            <ul class="list-unstyled">
                @foreach (var message in Model.Conversation)
                {
                    <li class="mb-3">
                        <div class="fw-semibold">@message.Role</div>
                        <div class="text-muted">@message.Content</div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="text-muted">No messages yet. Start by sending a request.</div>
        }
    </div>
</div>
