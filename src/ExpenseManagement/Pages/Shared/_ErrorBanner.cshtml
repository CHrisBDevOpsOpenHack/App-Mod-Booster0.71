@model ExpenseManagement.Models.ErrorInfo

@if (Model is not null)
{
    <div class="alert alert-warning shadow-sm mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>We hit a snag:</strong> @Model.Message
                @if (!string.IsNullOrWhiteSpace(Model.File))
                {
                    <span class="ms-2 text-muted">(File: @Model.File @if (Model.LineNumber.HasValue){<text>line @Model.LineNumber</text>})</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Guidance))
                {
                    <div class="mt-1 small">@Model.Guidance</div>
                }
            </div>
        </div>
    </div>
}
