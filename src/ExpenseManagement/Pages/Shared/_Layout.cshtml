<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Management</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-brand">
                <span class="nav-icon">üíº</span>
                <a href="/Index">Expense Management</a>
            </div>
            <div class="nav-links">
                <a href="/Index">Dashboard</a>
                <a href="/Expenses">Expenses</a>
                <a href="/AddExpense">New Expense</a>
                <a href="/Approvals">Approvals</a>
                <a href="/Chat">Chat</a>
                <a href="/swagger" target="_blank">API Docs</a>
            </div>
        </nav>
    </header>
    
    @if (ViewData["Error"] != null)
    {
        <div class="error-banner">
            <div class="error-content">
                <strong>‚ö†Ô∏è @ViewData["Error"]</strong>
                @if (ViewData["ErrorFile"] != null)
                {
                    <span class="error-location">(@ViewData["ErrorFile"]:@ViewData["ErrorLine"])</span>
                }
                @if (ViewData["ErrorGuidance"] != null)
                {
                    <p class="error-guidance">@ViewData["ErrorGuidance"]</p>
                }
            </div>
        </div>
    }
    
    <main class="container">
        @RenderBody()
    </main>
    
    <footer>
        <p>&copy; @DateTime.Now.Year Expense Management System</p>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
