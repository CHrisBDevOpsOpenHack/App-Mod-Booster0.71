@page
@model ExpenseManagement.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="card" style="text-align: center; padding: 3rem;">
    <h1 style="font-size: 3rem; color: var(--danger-color);">⚠️</h1>
    <h2 style="margin: 1rem 0;">Something went wrong</h2>
    <p style="color: var(--gray-500);">An error occurred while processing your request.</p>
    
    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 1rem; font-size: 0.875rem; color: var(--gray-500);">
            Request ID: <code>@Model.RequestId</code>
        </p>
    }
    
    <a href="/Index" class="btn btn-primary" style="margin-top: 1.5rem;">Return to Dashboard</a>
</div>
