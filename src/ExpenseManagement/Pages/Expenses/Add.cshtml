@page
@model ExpenseManagement.Pages.Expenses.AddModel
@{
    ViewData["Title"] = "Add Expense";
}

<h2 class="mb-4">Add Expense</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Input.Description" class="form-label"></label>
                    <input asp-for="Input.Description" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Amount" class="form-label"></label>
                    <input asp-for="Input.Amount" class="form-control" type="number" step="0.01" min="0" required />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.ExpenseDate" class="form-label"></label>
                    <input asp-for="Input.ExpenseDate" class="form-control" type="date" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.CategoryId" class="form-label">Category</label>
                    <select asp-for="Input.CategoryId" class="form-select" asp-items="Model.CategoryOptions" required>
                        <option value="">Select category</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.UserId" class="form-label">User Id</label>
                    <input asp-for="Input.UserId" class="form-control" type="number" min="1" required />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-link" asp-page="/Expenses/List">Back to list</a>
            </div>
        </form>
        @if (Model.SuccessMessage is not null)
        {
            <div class="alert alert-success mt-3">@Model.SuccessMessage</div>
        }
    </div>
</div>
