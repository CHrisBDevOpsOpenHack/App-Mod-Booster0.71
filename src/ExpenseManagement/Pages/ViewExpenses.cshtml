@page
@model ViewExpensesModel
@{
    ViewData["Title"] = "View Expenses";
}

<h1>ðŸ“‹ View Expenses</h1>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchBox" placeholder="Search expenses...">
    </div>
    <div class="col-md-3">
        <select class="form-select" id="statusFilter">
            <option value="">All Statuses</option>
            <option value="Draft">Draft</option>
            <option value="Submitted">Submitted</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
    </div>
</div>

@if (Model.Expenses != null && Model.Expenses.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Employee</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.Expenses)
                {
                    <tr>
                        <td>@expense.ExpenseId</td>
                        <td>@expense.ExpenseDate.ToString("yyyy-MM-dd")</td>
                        <td>@expense.UserName</td>
                        <td>@expense.CategoryName</td>
                        <td>Â£@expense.Amount.ToString("N2")</td>
                        <td>@expense.Description</td>
                        <td>
                            <span class="badge bg-@(expense.StatusName switch {
                                "Draft" => "secondary",
                                "Submitted" => "primary",
                                "Approved" => "success",
                                "Rejected" => "danger",
                                _ => "secondary"
                            })">
                                @expense.StatusName
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No expenses found.</div>
}
