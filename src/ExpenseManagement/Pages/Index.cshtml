@page
@model IndexModel
@{
    ViewData["Title"] = "Expense Management";
}

<section class="py-4">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold">Expense Management System</h1>
            <p class="lead text-muted">Track expenses, approve submissions, and chat with your data using Azure OpenAI.</p>
            <div class="d-flex flex-wrap gap-2 mt-3">
                <a class="btn btn-primary" asp-page="/Expenses/Add">Add Expense</a>
                <a class="btn btn-outline-primary" asp-page="/Expenses/List">View Expenses</a>
                <a class="btn btn-outline-secondary" asp-page="/Expenses/Approvals">Approvals</a>
                <a class="btn btn-success" asp-page="/Chat">Open Chat</a>
            </div>
        </div>
        <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
            <div class="p-4 bg-light rounded-3 shadow-sm">
                <div class="small text-muted text-uppercase fw-semibold">Azure ready</div>
                <div class="h5 mt-2">Deploy to App Service + Azure SQL with one script.</div>
                <p class="mb-0 text-muted">Uses managed identity, Application Insights, and optional OpenAI.</p>
            </div>
        </div>
    </div>
</section>

<section class="mt-4">
    <h2 class="h4 mb-3">Status at a glance</h2>
    <div class="row g-3">
        @if (Model.Summaries.Any())
        {
            foreach (var summary in Model.Summaries)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="text-muted text-uppercase fw-semibold small">@summary.StatusName</div>
                            <div class="h3 mb-0">@summary.Count</div>
                            <div class="text-success fw-semibold">£@summary.TotalAmount</div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No live data yet. Deploy the infrastructure or connect the database to see real metrics.</div>
            </div>
        }
    </div>
</section>

<section class="mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Recent activity</h2>
        <a class="text-decoration-none" asp-page="/Expenses/List">View all</a>
    </div>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.RecentExpenses.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expense in Model.RecentExpenses)
                            {
                                <tr>
                                    <td>#@expense.ExpenseId</td>
                                    <td>@expense.Description</td>
                                    <td>@expense.CategoryName</td>
                                    <td><span class="badge bg-light text-dark">@expense.StatusName</span></td>
                                    <td>£@expense.Amount</td>
                                    <td>@expense.ExpenseDate.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-muted">No expenses yet. Add one to get started.</div>
            }
        </div>
    </div>
</section>
