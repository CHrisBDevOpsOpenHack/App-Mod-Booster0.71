@page
@model ExpenseManagement.Pages.ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="card">
    <div class="card-header">
        <h1 class="card-title">All Expenses</h1>
        <div>
            <a href="/AddExpense" class="btn btn-primary">+ New Expense</a>
        </div>
    </div>
    
    <form method="get" style="margin-bottom: 1rem;">
        <div style="display: flex; gap: 1rem; align-items: center;">
            <label class="form-label" style="margin: 0;">Filter:</label>
            <select name="status" class="form-control" style="width: auto;" onchange="this.form.submit()">
                <option value="">All Statuses</option>
                @foreach (var status in Model.Statuses)
                {
                    <option value="@status.StatusName" selected="@(Model.SelectedStatus == status.StatusName)">@status.StatusName</option>
                }
            </select>
        </div>
    </form>
    
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Employee</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                    <td>@expense.UserName</td>
                    <td>@expense.CategoryName</td>
                    <td>Â£@expense.Amount.ToString("N2")</td>
                    <td>
                        <span class="badge badge-@expense.StatusName.ToLower()">@expense.StatusName</span>
                    </td>
                    <td>@expense.Description</td>
                    <td>
                        @if (expense.StatusName == "Draft")
                        {
                            <form method="post" asp-page-handler="Submit" style="display: inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" class="btn btn-primary" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;">Submit</button>
                            </form>
                            <form method="post" asp-page-handler="Delete" style="display: inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" class="btn btn-danger" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;" onclick="return confirm('Delete this expense?')">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
